<Page x:Class="Kozin41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kozin41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1" Visibility="Collapsed" Name="CaptchaPanel" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
                <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
                <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
                <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
            </StackPanel>
            <TextBox Name="CaptchaInput" FontSize="16" Width="150" Height="30" Margin="0,10,0,0" 
             HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="30" Margin="271,82,0,0"></TextBlock>
        <TextBox Name="LoginTB" Grid.Row="0" Grid.Column="1" FontSize="15" Width="300" Height="40" Margin="10,83,90,10" FontFamily="Comic Sans MS"/>
        <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="30" Margin="250,10,0,0"></TextBlock>
        <TextBox Name="PassTB" Grid.Row="1" Grid.Column="1" FontSize="15" Width="300" Height="40" Margin="10,12,90,82"/>

        <Button Content="Войти как гость" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Click="GuestBtn_Click"></Button>
        <Button Content="Войти" Grid.Row="3" Grid.Column="1" Width="250" HorizontalAlignment="Center" VerticalAlignment="top" Name="LoginBtn" Click="LoginBtn_Click"></Button>
    </Grid>
</Page>
