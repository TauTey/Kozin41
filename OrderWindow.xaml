<Page x:Class="Kozin41.OrderWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kozin41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderWindow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Левый столбец -->
        <TextBlock Text="Дата формирования:" Grid.Row="0" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock Text="Дата доставки:" Grid.Row="1" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock Text="ФИО клиента:" Grid.Row="2" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock Text="Номер заказа:" Grid.Row="3" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock Text="Пункт выдачи:" Grid.Row="5" FontSize="14" VerticalAlignment="Center"/>

        <!-- Правый столбец -->
        <DatePicker Grid.Column="1" Grid.Row="0" Name="StartDP" IsEnabled="False"/>
        <DatePicker Grid.Column="1" Grid.Row="1" Name="OrderDP"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Name="ClientTB" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Name="TBOrderID" FontSize="14" VerticalAlignment="Center"/>

        <ComboBox Grid.Column="1" Grid.Row="5" Name="PickupCombo" Height="30" FontSize="14">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                <Run Text="{Binding PickUpPointIndex}"/>
                <Run Text=", "/>
                <Run Text="{Binding PickUpPointCity}"/>
                <Run Text=", "/>
                <Run Text="{Binding PickUpPointStreet}"/>
                <Run Text=", "/>
                <Run Text="{Binding PickUpPointFlat}"/>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Grid.Column="1" Grid.Row="6" Content="Сохранить" Click="SaveBtn_Click" Height="35" Width="100"/>

        <!-- Список товаров -->
        <ListView Name="OrderItemsListView" Grid.Row="4" Grid.ColumnSpan="2" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="5" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="{Binding Product.ProductImagePath}" 
                           Height="60" Width="60" 
                           Grid.Column="0"/>

                            <StackPanel Grid.Column="1" Margin="10,0">
                                <TextBlock Text="{Binding Product.ProductName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Product.ProductArticleNumber}" Foreground="Gray"/>
                                <TextBlock>
                            <Run Text="Цена: "/>
                            <Run Text="{Binding Product.ProductCost, StringFormat={}{0:C}}"/>
                            <Run Text=" (скидка "/>
                            <Run Text="{Binding Product.ProductDiscountAmount}"/>
                            <Run Text="%)"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Column="2" VerticalAlignment="Center">
                        <Run Text="Кол-во: "/>
                        <Run Text="{Binding ProductQuantity}"/>
                            </TextBlock>

                            <TextBlock Grid.Column="3" VerticalAlignment="Center">
                        <Run Text="Сумма: "/>
                        <Run Text="{Binding ItemTotal, StringFormat={}{0:C}}"/>
                            </TextBlock>

                            <Button Grid.Column="4" Content="✕" Width="30" Height="30"
                            Background="LightCoral" Foreground="White"
                            Click="DeleteItem_Click" Tag="{Binding Product.ProductArticleNumber}"
                            ToolTip="Удалить"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Итоговая сумма -->
        <Border Grid.Row="6" Grid.Column="0" Background="AliceBlue" Padding="10">
            <TextBlock Name="TotalText" FontSize="16" FontWeight="Bold"/>
        </Border>
    </Grid>
</Page>
