<Window x:Class="Kozin41.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kozin41"
        mc:Ignorable="d"
        Title="41 Размер" Height="550" Width="1000" FontFamily="Comic Sans MS" Icon="/res/icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Дата формирования заказа" FontSize="22"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Дата доставки заказа" FontSize="22"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" Text="ФИО клиента" FontSize="22"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="3" Text="Номер заказа" FontSize="22"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="5" Text="Пункт выдачи" FontSize="22"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="6" Text="Сумма заказа" FontSize="22"></TextBlock>
        <DatePicker Name="OrderFormDate" Grid.Row="0" Grid.Column="1" IsEnabled="False" SelectedDateChanged="OrderFormDate_SelectedDateChanged"></DatePicker>
        <DatePicker Name="OrderDeliveryDate" Grid.Row="1" Grid.Column="1" IsEnabled="False"></DatePicker>
        <TextBlock Name="FIOBox" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" FontSize="20"/>
        <TextBlock Name="OrderNumBox" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" FontSize="20"></TextBlock>
        <ComboBox Name="PickUpPointComboBox" Grid.Row="5" Grid.Column="1" SelectionChanged="PickUpPointComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PickUpFull}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="Сохранить" Grid.Row="7" Grid.Column="1" Name="OrderSaveBtn" FontSize="22" Click="OrderSaveBtn_Click"></Button>
        <TextBlock Name="TotalCost" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold"></TextBlock>
        <ListView Name="OrderListView" Grid.Row="4" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition ></ColumnDefinition>
                            <ColumnDefinition Width="500"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="150"  HorizontalAlignment="Center" Stretch="UniformToFill"  Grid.Column="0" Grid.RowSpan="3">
                            <Image.Source>
                                <Binding Path="ProductImagePath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /Товар_import/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Margin="2" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Margin="2" FontSize="15"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Margin="2" FontSize="15"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="2" FontSize="15"></TextBlock>
                        <TextBlock Text="Скидка" HorizontalAlignment="Right" Grid.Column="2" TextWrapping="Wrap" Margin="2" FontSize="15"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Grid.RowSpan="4" TextWrapping="Wrap" Margin="2" FontSize="25"></TextBlock>
                        <StackPanel Grid.Row="4" Orientation="Horizontal" Grid.Column="1">
                            <Button Name="BtnMinus" Click="BtnMinus_Click" Content="-" Width="30"></Button>
                            <TextBlock Name="QuantityTB" Width="50" FontSize="30" Text="{Binding ProductRealStock}"></TextBlock>
                            <Button Name="BtnPlus" Click="BtnPlus_Click" Content="+" Width="30"></Button>
                        </StackPanel>
                        <Button Name="DeleteBtn" Grid.Column="1" Grid.Row="5" Content="Удалить" Width="75" Height="30" Click="DeleteBtn_Click" HorizontalAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</Window>
